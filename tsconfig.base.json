{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tictac/application": ["libs/core/application/src/index.ts"],
      "@tictac/domain": ["libs/core/domain/src/index.ts"],
      "@tictac/ioc": ["libs/infrastructure/ioc/src/index.ts"],
      "@tictac/ui": ["libs/delivery/ui/src/index.ts"]
    },
    "types": ["reflect-metadata"]
  },
  "exclude": ["node_modules", "tmp"]
}
